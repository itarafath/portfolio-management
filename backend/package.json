{
    "name": "portfolio-dashboard-backend",
    "version": "1.0.0",
    "description": "Portfolio Management Dashboard - Backend API",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only -r reflect-metadata src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:migrate": "npm run build && npm start",
        "typeorm": "ts-node -r reflect-metadata ./node_modules/typeorm/cli.js",
        "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.ts",
        "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
        "migration:revert": "npm run typeorm -- migration:revert -d src/config/database.ts",
        "seed": "ts-node -r reflect-metadata src/scripts/seed.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.12.0",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.21",
        "uuid": "^11.1.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.4",
        "@types/uuid": "^10.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3"
    }
}